@model AppUser
@{
    ViewData["Title"] = $"User: {Model.UserName} | Gamescore";
}

<div id="profile">

    @if (Model.UserName == User.Identity.Name)
    {
        <p>
            <b><a asp-area="Identity" asp-page="/Account/Manage/Index" >Account settings</a></b>
        </p>
    }

    <div id="info" class="d-flex flex-row">
        <div class="card user">

            <div class="card-header">

                <div><h3>@Model.UserName</h3></div>

            </div>

            <div class="card-body d-flex flex-column">

                <div class="d-flex flex-row">                    
                    <p>
                        Всем привет
                    </p>
                </div>

                <div>

                    Test

                </div>
            </div>
        </div>

        <div class="card friends">

            <div class="card-header">

                <div><h3>Friends</h3></div>

            </div>

            <div class="card-body d-flex flex-column">

                <div class="d-flex flex-table">    
                    <p>
                        REQUESTS:
                        
                    </p>
                    <p>
                        Your friends
                    </p>
                </div>

            </div>
        </div>
        
    </div>

    <hr />
        
    <h3>Collection
    @if (Model.UserName == User.Identity.Name)
    {
        <button id="addGame" class="btn btn-secondary btn-sm" onclick="toggleModal()">+</button>
    }
    </h3>

    <div class="profile-games">
    @foreach (var game in Model.GamesFavorited)
    {
        <p>* @game.Name</p>
    }
    </div>    
    
</div>

@Html.Partial("AddToCollection")

