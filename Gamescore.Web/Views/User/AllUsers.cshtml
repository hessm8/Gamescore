@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "All users";
}

<div id="entities">
    @foreach (var entity in Model)
    {
        <div class="card entity">            

            <div class="card-body d-flex flex-row justify-content-left">

                <div class="entity-text">
                    <h4><a href="~/user/@entity.UserName" title="@entity.UserName">@entity.UserName</a></h4>
                    <p style="color:gray;">@entity.FullName</p>
                    <hr>
                    <p>Games in collection: @entity.GamesFavorited.Count</p>
                    <p>Games rated: @entity.GamesRated.Count</p>
                </div>

            </div>
        </div>
    }
</div>