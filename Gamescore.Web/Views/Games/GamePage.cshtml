@model Game
@{
    ViewData["Title"] = $"{Model.Name} | Gamescore";
}

@functions{

    //public string GetImage(byte[]? image)
    //{

    //}

}

<div id="games">

        <div class="card game">

            <div class="card-header game-points d-flex flex-row justify-content-between">

                <div>
                    <div><h3>@Model.Name (@Model.ReleaseDate)</h3></div>
                    <div><p style="color:gray;">@Model.NameLocalized</p></div>
                </div>

                <div class="game-point d-flex flex-column">

                    <div class="game-icon flex-row">
                        <img class="icon-small" src="/icons/chess.png" title="Players" />
                        <div>@Model.PlayersMin - @Model.PlayersMax</div>
                    </div>
                    <div class="game-icon flex-row">
                        <img class="icon-small" src="/icons/user-restrict.png" title="Min. age" />
                        <div>@Model.AgeMin+</div>
                    </div>
                    <div class="game-icon flex-row">
                        <img class="icon-small" src="/icons/time.png" title="Game duration" />
                        <div>@Model.DurationMin - @Model.DurationMax</div>
                    </div>

                </div>
            </div>

            <div class="card-body game-desc d-flex flex-column">
                <div class="d-flex flex-row">
                    <img class="game-image" src="https://s.tesera.ru/images/items/635932/200x200xpa/photo1.jpg" />
                    <p>
                        @Model.Description
                    </p>
                </div>
                <div>
                    @*Rating*@
                    <div class="rating">
                        @for (int i = 0; i < 10; i++)
                        {
                            <img class="icon-small icon-star" src="/icons/star.png" star-index="@i" game-alias="@Model.Alias" onclick="location.href='@Url.Action("RateGame", "games", new { name = @Model.Alias, rating = @i+1 })'"/>
                        }
                    </div>
                </div>
            </div>
        </div>
    
</div>

@section Scripts
{
 <script>

     $( ".icon-star" ).hover(
        function() {

            let game = $( this ).attr( "game-alias" );
            let curIndex = $( this ).attr( "star-index" );

            $( ".icon-star[game-alias='".concat(game, "']") ).each(function( index ) {
                if (index <= curIndex) {
                    $(this).addClass('is-active');
                }
            });

        }, 
        function() {

            $( ".icon-star" ).each(function( index ) {
                $(this).removeClass('is-active');
            });

        }
    );

    //function Test() {
    //    $("#icon-star").toggleClass('is-active');
    //}

 </script>
} 
